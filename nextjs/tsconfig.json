{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": ".next",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@app/*": [
                "./src/app/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@server/*": [
                "./src/server/*"
            ],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/**/*", 
        "src/tests/setupTests.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "jest": {
        "moduleNameMapper": {
            "^@app/(.*)$": "<rootDir>/src/app/$1",
            "^@models/(.*)$": "<rootDir>/src/models/$1",
            "^@components/(.*)$": "<rootDir>/src/components/",
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    }
}
