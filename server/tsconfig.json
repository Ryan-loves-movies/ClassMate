{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@models/*": [
                "./database/models/*"
            ],
            "@controllers/*": [
                "./database/controllers/*"
            ],
            "@server/*": [
                "./*"
            ]
        }
    },
    "include": [
        "*.ts",
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
