{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next",
            }
        ],
        "paths": {
            "@server/*": ["./*"]
        },
    },
    "include": [
        "*.ts",
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
