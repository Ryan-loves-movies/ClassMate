{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@app/*": ["./src/app/*"],
            "@server/*": ["./src/server/*"]
        },
    },
    "include": [
        "next-env.d.ts", 
        "**/*.ts", 
        "**/*.tsx", 
        ".next/types/**/*.ts", 
    ],
    "exclude": ["node_modules"]
}
